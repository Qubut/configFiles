# Key indicators
#
# Add the following bindings to i3 config file:
#
[keyindicator]
command=~/.config/i3/scripts/keyindicator --hide
#Allowed keys are CAPS and NUM
KEY=CAPS
markup=pango
interval=0
signal=11
#TEXT_ON=CapsLockOn
##EXT_OFF=CapsLockOff
COLOR_ON=#00FF00
#COLOR_OFF=#222222
##BG_COLOR_ON=
##BG_COLOR_OFF=
[keyindicator]
command=~/.config/i3/scripts/keyindicator 
KEY=NUM
markup=pango
interval=0
signal=11
#TEXT_ON=NumLockOn
#TEXT_OFF=NumLockOff
COLOR_ON=#00FF00
HIDE_WHEN_OFF=1
